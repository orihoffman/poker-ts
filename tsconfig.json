{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,               // Ensures .d.ts files are generated
    "outDir": "./dist",                // Compiled .js and .d.ts files go here
    "rootDir": "./src",                // Specifies the root directory of input files
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "baseUrl": ".",                    // Base path for module resolution
    "paths": {
      "types/*": ["src/types/*"]       // Resolves `types` for imports
    }
  },
  "include": ["src/**/*"],             // Includes all .ts files in src
  "exclude": ["test/**/*.spec.ts"]     // Excludes tests
}
